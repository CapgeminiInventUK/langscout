{
  "extends": "next/core-web-vitals",
  "plugins": [
    "unicorn"
  ],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "dist/"
  ],
  "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "case": "kebabCase",
          "ignore": [
            "^\\[.*\\]\\.tsx$" // Next.js dynamic routes
          ]
        }
      ],
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "debug",
            "info",
            "warn",
            "error"
          ]
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        {
          "code": 100
        }
      ]
  }
}
